<schemalist>

    <schema id="org.gnome.shell.extensions.sp-tray" path="/org/gnome/shell/extensions/sp-tray/">

        <key type="s" name="starting">
            <default>"‚öôÔ∏è‚öôÔ∏è‚öôÔ∏è"</default>
            <summary>starting icon</summary>
            <description>the default icon that's briefly displayed as the extension starts</description>
        </key>

        <key type="s" name="paused">
            <default>"‚è∏Ô∏è"</default>
            <summary>paused icon</summary>
            <description>the display text to indicate playback is paused</description>
        </key>

        <key type="s" name="off">
            <default>"üí§Ô∏è"</default>
            <summary>off icon</summary>
            <description>the display text to indicate spotify is not running</description>
        </key>

        <key type="s" name="display-format">
            <default>"{artist} | {track}"</default>
            <summary>how the track info is displayed</summary>
        </key>

        <key type="s" name="podcast-format">
            <default>"{album} | {track}"</default>
            <summary>how the podcast info is displayed</summary>
        </key>

        <key type="b" name="hidden-when-inactive">
            <default>true</default>
            <summary>hide when spotify is not running?</summary>
            <description>the variable that determines if the widget is hidden 
        when spotify is not running</description>
        </key>

        <key type="i" name="position">
            <default>2</default>
            <summary>icon position in the tray</summary>
            <description>0=left, 1=center, 2=right(default)</description>
        </key>

        <key type="b" name="hidden-when-paused">
            <default>false</default>
            <summary>hide when playback is paused?</summary>
            <description>the variable that determines if the widget is hidden 
        when playback is paused</description>
        </key>

        <key type="i" name="title-max-length">
            <default>35</default>
            <summary>max length of title field</summary>
        </key>

        <key type="i" name="artist-max-length">
            <default>35</default>
            <summary>max length of artist field</summary>
        </key>

        <key type="i" name="album-max-length">
            <default>35</default>
            <summary>max length of album field</summary>
        </key>

        <key type="i" name="logo-position">
            <default>1</default>
            <summary>relative position of spotify's logo</summary>
            <range min="0" max="2" />
        </key>

    </schema>
</schemalist>